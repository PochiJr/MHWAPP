<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mhwapp.MainActivity"
    android:background="@mipmap/fondo">

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:src="@mipmap/mhw"
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />



    <LinearLayout
        android:layout_weight="64"
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:layout_marginRight="5dp"
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />

                <LinearLayout
                    android:id="@+id/SliderDots"
                    android:layout_below="@+id/viewPager"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/armas"
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@mipmap/icono_armas" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/bestiario"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/icono_bestiario"/>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/historia"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/historia_icono"/>
                <ImageView
                    android:id="@+id/qna"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/qna_icono"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/music_button"
        android:scaleType="fitEnd"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:layout_gravity="right"
        android:src="@mipmap/vinyl"
        android:layout_width="60dp"
        android:layout_height="0dp" />

    <TextView
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textSize="10dp"
        android:textColor="@color/orange"
        android:text="Ver. 1.0"/>



</LinearLayout>
